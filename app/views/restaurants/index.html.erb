<div class="container">
  <h1>Restaurants</h1>

  <ul>
   <% @restaurants.each do |restaurant| %>
       <%= link_to restaurant_path(restaurant) do %>
        <li><%= restaurant.name %></li>
        <% end %>
        <p>Address : <%= restaurant.address %> Category: <%= restaurant.category %></p>
    <% end %>
  </ul>
  <%= link_to "Add a Restaurant", new_restaurant_path %>
</div>
